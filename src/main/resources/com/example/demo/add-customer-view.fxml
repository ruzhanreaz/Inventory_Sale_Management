<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="800.0" prefWidth="1000.0" styleClass="main-container" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controllers.AddCustomerController">
    <VBox alignment="TOP_CENTER" spacing="16.0">
        <padding>
            <Insets bottom="24" left="32" right="32" top="24" />
        </padding>

        <!-- Title (match admin product style) -->
        <Label styleClass="title-label" text="Add Customer">
            <font>
                <Font size="20" />
            </font>
        </Label>

        <!-- Inline form fields (match admin-product layout) -->
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <VBox>
                    <children>
                        <Label styleClass="field-label" text="Name" />
                        <TextField fx:id="nameField" prefWidth="220.0" promptText="Customer Name" styleClass="text-field" />
                    </children>
                </VBox>

                <VBox>
                    <children>
                        <Label styleClass="field-label" text="Phone" />
                        <TextField fx:id="phoneField" prefWidth="160.0" promptText="Phone Number" styleClass="text-field" />
                    </children>
                </VBox>

                <VBox>
                    <children>
                        <Label styleClass="field-label" text="Email" />
                        <TextField fx:id="emailField" prefWidth="240.0" promptText="Email" styleClass="text-field" />
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- Customer table (match widths) -->
        <TableView fx:id="customerTable" prefHeight="568.0" prefWidth="936.0" styleClass="table-view">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="80.0" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="220.0" text="Name" />
                <TableColumn fx:id="phoneColumn" prefWidth="180.0" text="Phone" />
                <TableColumn fx:id="emailColumn" prefWidth="320.0" text="Email" />
            </columns>
        </TableView>

        <!-- Status label (optional) -->
        <Label fx:id="statusLabel" styleClass="status-label" />

        <!-- Bottom action buttons (same style and alignment as admin-product) -->
        <HBox alignment="CENTER" prefHeight="73.0" prefWidth="936.0" spacing="10.0">
         <children>
            <Button onAction="#handleAddCustomer" prefHeight="36.0" prefWidth="137.0" styleClass="button-blue" text="Add Customer" />
            <Button fx:id="backButton" onAction="#handleBack" prefHeight="36.0" prefWidth="141.0" styleClass="button-red" text="Back" />
         </children>
        </HBox>

    </VBox>
</StackPane>
