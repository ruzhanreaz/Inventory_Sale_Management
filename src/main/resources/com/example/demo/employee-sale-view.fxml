<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controllers.CreateSaleController">
    <HBox alignment="CENTER" spacing="24.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, #b0b0b0, 10, 0, 0, 2);">
        <!-- Product List Side -->
        <VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="301.0" spacing="10.0">
            <Label style="-fx-font-weight: bold; -fx-font-size: 18;" text="Select Product" />
            <TableView fx:id="productListTable" prefHeight="749.0" prefWidth="329.0">
                <columns>
                    <TableColumn fx:id="listProductIdColumn" prefWidth="60" text="ID" />
                    <TableColumn fx:id="listProductNameColumn" prefWidth="120" text="Name" />
                    <TableColumn fx:id="listProductPriceColumn" prefWidth="60" text="Price" />
                    <TableColumn fx:id="listProductStockColumn" prefWidth="60" text="Stock" />
                </columns>
            </TableView>
        </VBox>
        <!-- Sell Form and Cart Side -->
        <VBox alignment="TOP_CENTER" prefHeight="798.0" prefWidth="643.0" spacing="16.0">
            <Label alignment="CENTER" text="Sell Products">
                <font>
                    <Font name="Segoe UI Semibold" size="24.0" />
                </font>
            </Label>
            <GridPane hgap="10.0" vgap="12.0">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="100.0" />
                    <ColumnConstraints halignment="LEFT" minWidth="200.0" />
                    <ColumnConstraints halignment="LEFT" minWidth="100.0" />
                </columnConstraints>
                <children>
                    <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="phoneField" promptText="customer phone number" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <Button fx:id="searchCustomerButton" onAction="#onSearchCustomer" styleClass="button-blue" stylesheets="@styles.css" text="Search Customer" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                    <Label text="Customer Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1" />
                    <Label text="Customer Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2" />
                    <Label text="Seach Product:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="productIdField" promptText="search by id/name/category" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    <Button fx:id="addProductButton" onAction="#onAddProduct" styleClass="button-blue" stylesheets="@styles.css" text="Search" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                </children>
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>
            </GridPane>
            <TableView fx:id="productsTable" prefHeight="307.0" prefWidth="643.0">
                <columns>
                    <TableColumn fx:id="productIdColumn" prefWidth="86.0" text="Product ID" />
                    <TableColumn fx:id="productNameColumn" prefWidth="175.0" text="Product Name" />
                    <TableColumn fx:id="quantityColumn" prefWidth="87.0" text="Quantity" />
                    <TableColumn fx:id="priceColumn" prefWidth="118.0" text="Price" />
                    <TableColumn fx:id="totalColumn" minWidth="2.0" prefWidth="103.0" text="Total" />
                    <TableColumn fx:id="removeColumn" prefWidth="73.0" text="Remove" />
                </columns>
            </TableView>
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Label styleClass="total-label" text="Total: $" />
                <Label fx:id="totalLabel" styleClass="total-amount" text="0.00" />
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="completeSaleButton" onAction="#onCompleteSale" prefHeight="36.0" prefWidth="103.0" styleClass="button-blue" stylesheets="@styles.css" text="Checkout" />
                <Button fx:id="draftButton" onAction="#onDraftButton" prefHeight="36.0" prefWidth="103.0" styleClass="button-blue" stylesheets="@styles.css" text="Draft" />
                <Button fx:id="backButton" onAction="#handleBack" prefHeight="36.0" prefWidth="107.0" styleClass="button-red" stylesheets="@styles.css" text="Back" />
            </HBox>
            <Label style="-fx-font-weight: bold; -fx-font-size: 16;" text="Drafts List" />
            <ListView fx:id="draftsListView" prefHeight="100" prefWidth="440" />
        </VBox>
    </HBox>
</StackPane>
